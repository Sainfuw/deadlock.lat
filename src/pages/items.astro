---
import { ItemTabs } from '@/components/atoms/ItemTabs'
import Layout from '@/layouts/Layout.astro'
import { actions } from 'astro:actions'

const { data: items, error } = await actions.getItems()
if (error) throw new Error('Error fetching data')
---

<Layout title='Items'>
  <!-- <h2 class='text-2xl font-bold text-center py-4'>List of Items</h2> -->
  <div>
    <ItemTabs client:load items={items} />
  </div>
</Layout>
