---

<Layout title='Welcome to Astro.'>
  <div class={`min-h-screen ${isDarkMode ? 'dark' : ''}`}>
    <div
      class='bg-white dark:bg-black text-black dark:text-white min-h-screen flex flex-col'
    >
      <div class='w-4/5 mx-auto'>
        <nav class='border-b border-gray-200 dark:border-gray-800 py-4'>
          <div class='flex justify-between items-center'>
            <div class='flex items-center'>
              <Image
                src='/placeholder.svg?height=40&width=40&text=Logo'
                alt='Logo'
                width={40}
                height={40}
                class='mr-2'
              />
              <span class='text-xl font-bold'>Game Wiki</span>
            </div>
            <div class='flex items-center space-x-4'>
              <DropdownMenu>
                <DropdownMenuTrigger asChild>
                  <Button variant='outline' size='icon'>
                    <Globe className='h-[1.2rem] w-[1.2rem]' />
                    <span class='sr-only'>Toggle language</span>
                  </Button>
                </DropdownMenuTrigger>
                <DropdownMenuContent align='end'>
                  <DropdownMenuItem> Español </DropdownMenuItem>
                  <DropdownMenuItem> English </DropdownMenuItem>
                </DropdownMenuContent>
              </DropdownMenu>
              <div class='flex items-center space-x-2'>
                <Sun
                  className='h-[1.2rem] w-[1.2rem] text-gray-400 dark:text-gray-500'
                />
                <Switch checked={!isDarkMode} aria-label='Toggle dark mode' />
                <Moon
                  className='h-[1.2rem] w-[1.2rem] text-gray-400 dark:text-gray-500'
                />
              </div>
              <Sheet>
                <SheetTrigger asChild>
                  <Button variant='outline'>Login</Button>
                </SheetTrigger>
                <SheetContent>
                  <SheetHeader>
                    <SheetTitle>Login</SheetTitle>
                    <SheetDescription>
                      Enter your credentials to access your account.
                    </SheetDescription>
                  </SheetHeader>
                  <form class='space-y-4 mt-4'>
                    <div class='space-y-2'>
                      <Label htmlFor='email'>Email</Label>
                      <Input
                        id='email'
                        type='email'
                        placeholder='your@email.com'
                      />
                    </div>
                    <div class='space-y-2'>
                      <Label htmlFor='password'>Password</Label>
                      <Input id='password' type='password' />
                    </div>
                    <Button type='submit' className='w-full'>Login</Button>
                  </form>
                </SheetContent>
              </Sheet>
            </div>
          </div>
        </nav>

        <main class='py-8 flex-grow'>
          <h1 class='text-4xl font-bold mb-6 text-center'>Wiki del Juego</h1>

          <!-- <Tabs defaultValue='heroes' className='w-full'>
            <TabsList className='grid w-full grid-cols-2'>
              <TabsTrigger value='heroes'>Héroes</TabsTrigger>
              <TabsTrigger value='items'>Ítems</TabsTrigger>
            </TabsList>
            <TabsContent value='heroes'> -->
          <div
            class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 mt-6'
          >
            {
              heroes.map((hero) => (
                <TooltipProvider>
                  <Tooltip>
                    <TooltipTrigger asChild>
                      <Link href={`/hero/${hero.id}`}>
                        <Card className='hover:bg-black/5 dark:hover:bg-white/5 transition-colors bg-white dark:bg-black/20 border border-gray-200 dark:border-gray-800'>
                          <CardHeader className='p-3'>
                            <CardTitle className='text-sm'>
                              {hero.name}
                            </CardTitle>
                            <p class='text-xs text-gray-600 dark:text-gray-400'>
                              {hero.role}
                            </p>
                          </CardHeader>
                          <CardContent className='p-3'>
                            <Image
                              src={`/placeholder.svg?height=100&width=100&text=${hero.name}`}
                              alt={hero.name}
                              width={100}
                              height={100}
                              class='rounded-lg mx-auto'
                            />
                          </CardContent>
                        </Card>
                      </Link>
                    </TooltipTrigger>
                    <TooltipContent>
                      <p>{hero.description}</p>
                    </TooltipContent>
                  </Tooltip>
                </TooltipProvider>
              ))
            }
          </div>
        </main>
        <!-- <TabsContent value='items'> -->
        <div
          class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4 mt-6'
        >
          {
            items.map((item) => (
              <TooltipProvider>
                <Tooltip>
                  <TooltipTrigger asChild>
                    <Card className='hover:bg-black/5 dark:hover:bg-white/5 transition-colors bg-white dark:bg-black/20 border border-gray-200 dark:border-gray-800'>
                      <CardHeader className='p-3'>
                        <CardTitle className='text-sm'>{item.name}</CardTitle>
                        <p class='text-xs text-gray-600 dark:text-gray-400'>
                          {item.type}
                        </p>
                      </CardHeader>
                      <CardContent className='p-3'>
                        <Image
                          src={`/placeholder.svg?height=100&width=100&text=${item.name}`}
                          alt={item.name}
                          width={100}
                          height={100}
                          class='rounded-lg mx-auto'
                        />
                        <p class='text-center mt-2 font-bold'>{item.price} G</p>
                      </CardContent>
                    </Card>
                  </TooltipTrigger>
                  <TooltipContent>
                    <p>{item.description}</p>
                  </TooltipContent>
                </Tooltip>
              </TooltipProvider>
            ))
          }
        </div>
        <!-- </TabsContent>
          </Tabs> -->
      </div>
    </div>

    <footer class='bg-black text-white py-8 mt-8'>
      <div class='w-4/5 mx-auto'>
        <div class='grid grid-cols-1 md:grid-cols-3 gap-8'>
          <div>
            <h3 class='text-lg font-semibold mb-4'>Builds de Héroes</h3>
            <ul class='space-y-2'>
              {
                heroes.slice(0, 5).map((hero) => (
                  <li>
                    <Link
                      href={`/builds/${hero.id}`}
                      className='text-gray-300 hover:text-white hover:underline'
                    >
                      {hero.name}
                    </Link>
                  </li>
                ))
              }
              <li>
                <Link
                  href='/builds'
                  className='text-gray-300 hover:text-white hover:underline'
                >
                  Ver todos los héroes
                </Link>
              </li>
            </ul>
          </div>
          <div>
            <h3 class='text-lg font-semibold mb-4'>Información del Creador</h3>
            <p class='mb-2'>Creado por: Juan Pérez</p>
            <p class='mb-4'>
              Desarrollador de juegos y entusiasta de la fantasía
            </p>
            <div class='flex space-x-4'>
              <a
                href='https://github.com/juanperez'
                target='_blank'
                rel='noopener noreferrer'
                class='text-gray-400 hover:text-white'
              >
                <Github className='size-6' />
              </a>
              <a
                href='https://twitter.com/juanperez'
                target='_blank'
                rel='noopener noreferrer'
                class='text-gray-400 hover:text-white'
              >
                <X className='size-6' />
              </a>
              <a
                href='https://linkedin.com/in/juanperez'
                target='_blank'
                rel='noopener noreferrer'
                class='text-gray-400 hover:text-white'
              >
                <Linkedin className='size-6' />
              </a>
            </div>
          </div>
          <div class='flex flex-col items-center'>
            <Image
              src='/placeholder.svg?height=80&width=80&text=Logo'
              alt='Logo'
              width={80}
              height={80}
              class='mb-4'
            />
            <p class='text-center text-sm text-gray-400'>
              © 2023 Game Wiki. Todos los derechos reservados.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </div>
</Layout>
